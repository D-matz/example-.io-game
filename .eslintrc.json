{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "flowtype",
    "import"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "lines-between-class-members": "off",
    "no-console": "off",
    "no-else-return": "off",
    "no-plusplus": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "object-curly-newline": "off",
    "operator-linebreak": ["error", "after"]
  }
}
